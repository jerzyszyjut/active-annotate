# Environment variables for development
# Copy this file to .env and update with your actual values

# Project settings
PROJECT_NAME="Active Annotate API"
VERSION="0.1.0"
DESCRIPTION="Backend API for managing active learning annotation projects"

# Database configuration
POSTGRES_SERVER=localhost
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password
POSTGRES_DB=active_annotate
POSTGRES_PORT=5432

# ML Backend Configuration
# URL of your custom ML backend that accepts file uploads for training
ML_BACKEND_URL="http://ml-backend:9000"

# Label Studio Configuration
# Required for downloading training data and creating datasets
LABEL_STUDIO_URL="http://label-studio:8080"
LABEL_STUDIO_TOKEN="your_label_studio_api_token_here"

# API Configuration
BACKEND_CORS_ORIGINS=["http://localhost:3000","http://localhost:8080"]

# Note: To get your Label Studio API token:
# 1. Go to your Label Studio instance (http://localhost:8080)
# 2. Click on your user profile in the top right
# 3. Go to "Account & Settings"
# 4. Copy the "Access Token" from the "API" section
